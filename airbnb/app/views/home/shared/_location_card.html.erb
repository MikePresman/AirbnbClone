
<%= link_to city_path(city) do %>
  <div class="flex flex-col mt-12 shadow-xl w-56 h-42 rounded-xl overflow-hidden cursor-pointer">
    <img class="object-cover " src="<%=image%>">
    <div class="py-4 px-2">
      <span class="text-gray-900 text-sm tracking-tight font-medium"><%=city_name%></span>
    </div>
  </div>
<% end %>

