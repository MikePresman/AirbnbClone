<div class="flex flex-col mt-4">
  <div class="ml-auto mr-auto">
    <span class="md:ml-auto md:mr-auto text-3xl text-widest text-gray-900 md:flex-none flex justify-center md:justify-start">Top Places to Visit</span>
    <div class="flex flex-row flex-wrap -m-4 justify-center">
      <% @top_ten_cities.each do |city| %>
          <div class="pl-4 pr-4">
            <%= render LocationCardComponent.new(obj: city, name: city.city_name, image: city.display_image) %>
          </div>
      <% end %>
    </div>
  </div>
</div>